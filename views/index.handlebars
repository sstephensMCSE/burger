<h1>Burger app to demonstrate MVC </h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
    {{/unless}}
  {{/each}}
</ul>

<ul>
    {{#each burgers}}
    {{#if devoured}}
        {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger:</h2>
<form class="add-burger">

<div class="form-group">
    <label for="ca">Burger Name</label>
    <input type="text" id="ca" name="burger">
    <input type="hidden" name="devoured" value="0">
</div>
    <button class="btn btn-primary btn-lg"type="submit">Add Burger</button>
</form>